.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        Memberï¼š
        - @group.users.each do |user|
          %li.main-header__left-box__member-list__member
            = user.name
    .main-header__edit-btn
      = link_to edit_group_path(@group), class: "main-header__edit-btn--font" do
        Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new_message__input-box--text', placeholder: 'type a message'
      .new_message__input-box--image
        = f.label :image, class: 'new_message__input-box--image' do
          = icon('fas', 'image', class: 'new_message__input-box--image')
          = f.file_field :image, class: 'new_message__input-box--file'
      = f.submit 'Send', class: 'new_message__submit-btn'

